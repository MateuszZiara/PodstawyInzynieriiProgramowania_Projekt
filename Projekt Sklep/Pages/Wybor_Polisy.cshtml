@page "/Wybor_Polisy"
@{
    string docsearchCss = "https://cdn.jsdelivr.net/npm/@docsearch/css@3";
}
@model Projekt_Sklep.Pages.Wybor_PolisyModel
<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <script src="../assets/js/color-modes.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.118.2">
    <title>Insurance Policies</title>

    <!-- Dodaj link do stylów Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Dodaj link do Twoich własnych styli -->
    <link rel="stylesheet" href="@docsearchCss">

    <style>
        body {
            padding: 20px;
        }

        .policy {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
        }

            .policy button {
                margin-top: 10px;
            }
    </style>
</head>

<body>
    <form style="z-index: 1" method="post">
        <h1 class="display-4">Insurance Policies</h1>
        @if (@Model.PolicyType == "life")
        {
            <div class="policy">
                <h2>Polisa na życie</h2>
                <p>Cena: $500/rok</p>
                <button class="btn btn-primary" href="/Wykup_Polise">Szczegóły</button>
            </div>
        }
        @if (@Model.PolicyType == "car")
        {
            <div class="policy">
                <h2>Polisa na samochód</h2>
                <p>Cena: $800/rok</p>
                <button class="btn btn-primary" asp-page="PolicyDetails" asp-route-policyType="car">Szczegóły</button>
            </div>
        }
    @if (@Model.PolicyType == "property")
    {
        <div class="policy">
            <h2>Polisa na nieruchomość</h2>
            <p>Cena: $1200/rok</p>
            <button class="btn btn-primary" asp-page="PolicyDetails" asp-route-policyType="property">Szczegóły</button>
        </div>
    }
@if (@Model.PolicyType == "firm")
{
    <div class="policy">
        <h2>Polisa na firmę</h2>
        <p>Cena: $1500/rok</p>
        <button class="btn btn-primary" asp-page="PolicyDetails" asp-route-policyType="business">Szczegóły</button>
    </div>
}
        @if (@Model.PolicyType == "group")
        {
            <div class="policy">
                <h2>Polisa grupowa</h2>
                <p>Cena: $1000/rok za osobę</p>
                <button class="btn btn-primary" asp-page="PolicyDetails" asp-route-policyType="group">Szczegóły</button>
            </div>
        }

        <a href="/Wykup_Polise"><p>Wróć do polis</p></a>
    </form>
    <!-- Dodaj skrypty Bootstrapa, jeśli są potrzebne -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-eOJMYsd53UQ49M4a/9kPxB5lRXPJwGrMNGfx8rDIz3zOfkAdU2CEbrfeFgptJkoE" crossorigin="anonymous"></script>
</body>

</html>
